{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Playlist</h1>

    <table class="record_properties table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Listaudio</th>
                <td>{{ entity.listAudio }}</td>
            </tr>
        </tbody>
    </table>
    <div class="btn">{{ form(delete_form) }}</div>
    <a href="{{ path('playlists_edit' , { 'id': entity.id }) }}" > 
        <button class="btn">Editer</button>
    </a>
    <a href="{{ path('playlists') }}" > 
        <button class="btn">Retour</button>
    </a>
{% endblock %}
