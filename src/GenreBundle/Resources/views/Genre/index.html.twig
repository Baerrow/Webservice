{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Genre list</h1>
    <a href="{{ path('genres_new') }}" > 
        <button class="btn">Ajouter un nouveau genre</button>
    </a>

    <table class="records_list table table-striped datable">
        <thead>
            <tr>
                <th>Nom</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('genres_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
