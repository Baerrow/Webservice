{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Liste d'auteurs</h1>
    <a href="{{ path('authors_new') }}" > 
        <button class="btn">Ajouter un nouvel auteur</button>
    </a>

    <table class="records_list table table-striped datable">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <a href="{{ path('authors_show', { 'id': entity.id }) }}">{{ entity.name }}</a>
                </td>
                <td>{{ entity.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
